---
import UpArrow from '@/icons/UpArrow.astro'
---

<a
	id='go-top-btn'
	class='group fixed bottom-4 right-4 z-30 flex size-10 cursor-pointer items-center justify-center rounded-xl border border-teal-900 bg-teal-950 transition duration-300 active:border-teal-800 active:bg-teal-900 sm:hover:border-teal-800 sm:hover:bg-teal-900'
>
	<UpArrow
		class='text-secondary size-6 transform transition duration-300 group-active:text-slate-600 sm:rotate-45 sm:group-hover:rotate-0 sm:group-hover:text-slate-200'
	/>
</a>

<style>
	#go-top-btn {
		visibility: hidden;
		opacity: 0;
		animation: visibility linear both;
		animation-timeline: scroll();
		animation-range: 0 200px;
	}

	@keyframes visibility {
		to {
			visibility: visible;
			opacity: 1;
		}
	}
</style>

<script>
	import { $ } from '@/lib/dom-selector.ts'

	document.addEventListener('astro:page-load', () => {
		const goToTopBtn = $('#go-top-btn') as HTMLAnchorElement
		goToTopBtn.addEventListener('click', () => {
			window.scrollTo(0, 0)
		})
	})
</script>
